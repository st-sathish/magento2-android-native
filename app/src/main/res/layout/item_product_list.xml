<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    cardview:cardCornerRadius="4dp"
    cardview:cardElevation="@dimen/card_default_elevation"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/item_panel"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/item_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:contentDescription="@string/placeholder_text" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/item_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/placeholder_text"
                android:src="@drawable/white_heart"
                android:background="@color/colorGreen"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"

            android:orientation="vertical"
            android:layout_alignBottom="@+id/item_panel"
            android:layout_margin="10dp"
            android:layout_height="40dp">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/icon_items"
            android:background="@color/colorGreen"
            >
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@color/colorGreen">
            <TextView
                android:id="@+id/remove_item"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:background="@drawable/round_text_remove_item"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/symbol_remove_item"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_quantity"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/default_item_value"
                android:textColor="@android:color/background_dark"
                android:background="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/add_item"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:background="@drawable/round_text_add_item"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/symbol_add_item"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

             <ImageView
                    android:id="@+id/item_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_shopping_cart_white" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="10dp"
            android:layout_toRightOf="@+id/icon_items"
            android:id="@+id/blank_space"
            android:layout_height="40dp" />

            <ImageView
                android:id="@+id/item_compare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@color/colorGreen"
                android:layout_toRightOf="@+id/blank_space"
                android:src="@drawable/icon_compare" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>